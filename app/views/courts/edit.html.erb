<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コート作成</h1>
        <<%= form_for(@court, url: court_path(@court)) do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%><!--レコードに一致するカラム名-->
          </div>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_area :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :type %>
            <%= f.text_area :type, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :access %>
            <%= f.text_area :access, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :opening_hour %>
            <%= f.text_area :opening_hour, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :features %>
            <%= f.text_area :features, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_area :address, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :area %>
            <%= f.text_area :area, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :latitude %>
            <%= f.text_area :latitude, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :longitude %>
            <%= f.text_area :longitude, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :prefecture_id %>
            <%= f.text_area :prefecture_id, class: 'form-control' %>
          </div>

          <%= f.submit '更新', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>